---
import { Race } from '../api/NextRace.ts'

const data = await Race()
const name = data?.race[0].circuit?.circuitName
const nameFormater = name.split(' ').join('+')
const token = import.meta.env.API_KEY_TOKEN

const options = {
  method: "GET",
  redirect: "follow"
  };

  const url = `https://google.serper.dev/images?q=${nameFormater}&apiKey=${token}`
  const response = await fetch(url, options)
  const result = await response.json()
  const img = result.images[0].imageUrl
  ---

  <img 
  class="w-xl pl-50 pt-6"
  src={img} >



