---
import Next from '../components/icons/Next.astro'
import { Race } from '../api/NextRace'
import RaceImg from '../components/ImageCircuit.astro'
import WikipediaButton from './WikipediaButton.astro'
const items = await Race();
const ITEMS = [
  {
  title: "Pais",
  value: items[0].circuit.country,
  },
  {
  title: "Ciudad",
  value: items[0].circuit.city,
  },
  {
  title: "Record",
  value: items[0].circuit.lapRecord,
  },
  {
  title: "Vuelta Rapida (Piloto)",
  value: items[0].circuit.fastestLapDriverId,
  },
  {
  title: "Vuelta Rapida (Equipo)",
  value: items[0].circuit.fastestLapTeamId,
  },
  {
  title: "Vuelta Rapida (AÃ±o)",
  value: items[0].circuit.fastestLapYear,
  },
  {
  title: "Largo del circuito",
  value: items[0].circuit.circuitLength,
  },
  {
  title: "Total de bueltas",
  value: items[0].laps,
  },
]

---
<div class="text-2xl text-white pt-20 pb-2 flex pl-50">
  <Next/>
  <h1 class="font-bold"> Proxima Carrera</h1> 
</div>
<RaceImg />

<div class="p-8 pl-50">
<h1 class="text-2xl font-bold text-white mb-6">Datos del circuito <WikipediaButton/> </h1>
<div class="md:grid md:grid-cols-2 gap-4 mb-8 w-96">
  {ITEMS.map((item, index) => (
        <div key={index} class="bg-gray-800 rounded-lg p-4 border border-gray-700">
          <div class="text-gray-400 text-sm mb-2">{item.title}</div>
          <div class="text-white text-lg font-semibold">{item.value}</div>
        </div>
      ))}
    </div>  
</div>
