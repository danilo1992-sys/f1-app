--- 
import Time from './icons/Time.astro'
import lastRace from '../api/Lastrace.ts'
const raceData = await lastRace()

const ITEMS = [
  {
   title: "Nombre"
   },
   {
   title: "Equipo"
   },
   {
   title: "Tiempo"
   }
]
--- 
<div class="pl-50 pt-20 flex font-bold">
  <Time/>
    <h1 class="text-xl">Ultima Carrera </h1>
</div>
<div class="relative overflow-x-auto shadow-md sm:rounded-lg w-fit pt-20 pl-50">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
          <tr>
            {ITEMS.map(race => (
            <th scope="col" class="px-6 py-3">
              {race.title}
                </th>
              ))}
            </tr>
        </thead>
        <tbody>
          {raceData.map((item:any) => ( 
            <tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700 border-gray-200">
                <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                  {item.driverFullName} 
                </thi>
                <td class="px-6 py-4">
                  {item.teamName}
                </td>
                <td class="px-6 py-4">
                  {item.points}
                </td>
                <td class="px-6 py-4">
                  {item.time}
                </td>
            }))
        </tbody>
    </table>
</div>
